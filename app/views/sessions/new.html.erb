<div class="mx-auto md:w-2/3 w-full">
<p style="color: red"><%= notice %></p>

  <%= form_tag do %>
    <h2 class="font-bold text-3xl">Please Log In</h2>

    <div class="my-5">
      <%= label_tag :email, 'E-mail:' %>
      <%= text_field_tag :email, params[:email], class: "payment-field" %>
    </div>

    <div class="my-5">
      <%= label_tag :password, 'Password:' %>
      <%= password_field_tag :password, params[:password],
        class: "payment-field" %>
    </div>

    <div class="actions">
      <%= submit_tag "Login",  class: "rounded-lg py-3 px-5
        bg-green-600 text-black inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
